<h1>Articles</h1>
<h1><%= @tag %></h1>
<table class="table table-bordered table-striped table-hover">
 <tr>
 	<th>Author</th>
 	 <th>Title</th>
 	<th>Date</th>
 	<th>Reading Time</th>
 </tr>
  <% @articles.each do |article| %>
  <tbody>
  <tr>
  <div>
	<td><%=  article.name %></td>
	<td><%= link_to article.title,article %></td>
	<td><%= article.date %></td>
	<td><%= article.time %></td>
	</div>
	</tr>
	<br>
</tbody>
<% end %>

</table>

<%= link_to 'Next 10', next_path(:search => @tag) ,  :method => :post %><br/><br/>
<h2>History</h2>
<% @history.each do |hist| %>
	<%= hist.searchtag %>
	<br>
<% end %>
<h3>Time Taken - </h3><%= @tttc %>
